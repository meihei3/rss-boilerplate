{
    "name": "rss-boilerplate/rss-feed-generator",
    "description": "A generic RSS feed generator boilerplate for any changelog or content source",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "symfony/console": "7.3.*",
        "symfony/dependency-injection": "7.3.*",
        "symfony/config": "7.3.*",
        "symfony/http-client": "7.3.*",
        "symfony/filesystem": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/framework-bundle": "7.3.*",
        "symfony/http-kernel": "7.3.*",
        "symfony/twig-bundle": "7.3.*",
        "symfony/yaml": "7.3.*",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2.2",
        "squizlabs/php_codesniffer": "^4.0.0",
        "symfony/phpunit-bridge": "7.3.*",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12 src/ tests/",
        "phpcbf": "phpcbf --standard=PSR12 src/ tests/",
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/",
        "generate-rss": "php bin/console generate-rss"
    }
}
